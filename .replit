run = "gunicorn --bind 0.0.0.0:5000 --workers 3 --timeout 120 src.services.app:app"

[env]
PORT = "5000"
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "gunicorn --bind 0.0.0.0:5000 --workers 3 --timeout 120 src.services.app:app"]
deploymentTarget = "cloudrun"

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

