run = "gunicorn src.services.app:app --worker-class gevent --bind 0.0.0.0:$PORT --timeout 120"
modules = ["nodejs-20", "python-3.11"]

[env]
PYTHONUNBUFFERED = "1"

[nix]
channel = "stable-22_11"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "gobject-introspection", "gtk3", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "zlib"]

[deployment]
run = ["sh", "-c", "gunicorn src.services.app:app --worker-class gevent --bind 0.0.0.0:$PORT --timeout 120"]
deploymentTarget = "cloudrun"

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

